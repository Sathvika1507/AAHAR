<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DonateActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dim_20">

            <!-- Heading -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/donate"
                android:fontFamily="@font/opensans"
                android:textSize="@dimen/sp_28"
                android:textColor="@color/Text1"
                android:layout_marginBottom="@dimen/dim_20"
                android:layout_marginStart="@dimen/dim_10"
                android:layout_marginTop="@dimen/dim_20" />

            <!-- Info Box -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_layout_with_stroke"
                android:layout_marginVertical="@dimen/dim_10"
                android:padding="@dimen/dim_16">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/donate_info"
                    android:textColor="@color/Text1"
                    android:textSize="@dimen/sp_19"
                    android:fontFamily="@font/opensans" />
            </LinearLayout>

            <!-- Food Item Input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_layout_with_stroke"
                android:layout_marginBottom="@dimen/dim_5"
                android:padding="@dimen/dim_16">

                <TextView
                    android:id="@+id/label_food_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/food_items"
                    android:textColor="@color/Text1"
                    android:textSize="@dimen/sp_16"
                    android:fontFamily="@font/opensans"
                    android:layout_marginBottom="@dimen/dim_8"
                    android:labelFor="@id/foodItem" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_1"
                    android:background="@color/white"
                    android:layout_marginBottom="@dimen/dim_8" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/foodItemLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/light_blue"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/foodItem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:fontFamily="@font/opensans"
                        android:inputType="text"
                        android:hint=""
                        tools:ignore="TextFields" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Description Input -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_layout_with_stroke"
                android:layout_marginBottom="@dimen/dim_5"
                android:padding="@dimen/dim_16">

                <TextView
                    android:id="@+id/label_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/description"
                    android:textColor="@color/Text1"
                    android:textSize="@dimen/sp_16"
                    android:fontFamily="@font/opensans"
                    android:layout_marginBottom="@dimen/dim_8"
                    android:labelFor="@id/Description" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_1"
                    android:background="@color/white"
                    android:layout_marginBottom="@dimen/dim_8" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/DescriptionLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/light_blue"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/Description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:fontFamily="@font/opensans"
                        android:inputType="text"
                        android:hint=""
                        tools:ignore="TextFields" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Map -->
            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_200"
                android:layout_marginTop="@dimen/dim_10"
                tools:class="com.google.android.gms.maps.SupportMapFragment" />

            <!-- Submit Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_add_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/submit"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dim_10"
                android:textSize="@dimen/sp_19"
                android:textColor="@color/Text1"
                android:background="@drawable/button_bg4"
                android:fontFamily="@font/opensans"
                tools:ignore="VisualLintButtonSize" />
        </LinearLayout>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/dim_10"
            android:visibility="gone"
            android:layout_centerInParent="true" />
    </RelativeLayout>
</ScrollView>
